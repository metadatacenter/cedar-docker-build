FROM metadatacenter/cedar-microservice:2.7.5

ENV CEDAR_SERVER_NAME=messaging

ENV CEDAR_MESSAGING_HTTP_PORT=9012
ENV CEDAR_MESSAGING_ADMIN_PORT=9112
ENV CEDAR_MESSAGING_STOP_PORT=9212

ENV LOGDIR=${CEDAR_HOME}/log/server-${CEDAR_SERVER_NAME}/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

ADD scripts/pre-docker-entrypoint.sh ${CEDAR_HOME}/

EXPOSE ${CEDAR_MESSAGING_HTTP_PORT} ${CEDAR_MESSAGING_ADMIN_PORT} ${CEDAR_MESSAGING_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh
